doctype html
html
  head
    title= title
    link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src="//use.fontawesome.com/6035d6a879.js")
  body
    .header
      .menu
        .logo
          a(href='/'): img(src="images/logo.png")
        ul
          li: a(href='/values') Values
          li: a(href='/lifestyle') Lifestyle
          li: a(href='/community') Community
          li: a(href='/team') Team
      .catchphrase
        h1=catchphrase
    if description
      .head
        .description=description
        .legend !{cta}

    block content

    .footer
      .footer-legend Any question? Get in touch with us:
      .footer-link: a(href="mailto:hello@meetmangrove.com") hello@meetmangrove.com
      .footer-logos      
        a(href="https://twitter.com/intent/follow?screen_name=meetmangrove"): i(class="fa fa-twitter")
        a(href="https://www.snapchat.com/add/meetmangrove" target="_blank" class="snapchat"): img(src="images/snapchat.png")
        a(href="https://www.facebook.com/meetmangrove" target="_blank"): i(class="fa fa-facebook-official")
